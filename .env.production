# Production Environment Configuration
# Скопируйте этот файл в .env и заполните значения перед deployment

# Database Configuration (ИЗМЕНИТЕ ПАРОЛЬ!)
DB_USER=postgres
DB_PASSWORD=YOUR_SECURE_PASSWORD_HERE
DB_NAME=hakTbank
DB_PORT=5432

# Redis Configuration (УСТАНОВИТЕ ПАРОЛЬ!)
REDIS_PASSWORD=YOUR_REDIS_SECURE_PASSWORD_HERE
REDIS_PORT=6379

# API Configuration
API_PORT=8080
ENVIRONMENT=production
DEBUG=false

# Web Frontend Configuration
WEB_PORT=80
VITE_API_BASE_URL=https://api.yourdomain.com  # Укажите ваш домен для production

# Optional: SSL/TLS Certificates
# SSL_CERT_PATH=/path/to/cert.pem
# SSL_KEY_PATH=/path/to/key.pem

# Optional: External API Keys
# OPENAI_API_KEY=sk-...
# YOOKASSA_SHOP_ID=...
# YOOKASSA_API_KEY=...
